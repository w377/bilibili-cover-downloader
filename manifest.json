{
  "manifest_version": 3,
  "name": "B站封面下载器",
  "version": "1.0",
  "description": "一键下载B站/YouTube等视频封面",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["downloads", "scripting", "activeTab"],
  "host_permissions": ["*://*.bilibili.com/*", "*://*.youtube.com/*"],
  "icons": {
    "128": "icon.png"
  }
}
